    <tr>
        <th><?php echo $this->translate('Title of the job')?> / <?php echo $this->translate('Company Name')?></th>
        <th><?php echo $this->translate('Location')?> / <?php echo $this->translate('Date of receipt')?></th>
        <th><?php echo $this->translate('Apply')?></th>
